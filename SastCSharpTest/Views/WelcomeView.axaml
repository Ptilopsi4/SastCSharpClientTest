<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:SastCSharpTest.Controls"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SastCSharpTest.Views.WelcomeView"
        Loaded="UserControl_Loaded"
        Background="Transparent">

<UserControl.Resources>
    <Styles x:Key="AnimationStyles">
        <Style Selector="Image.Hero">
            <Setter Property="Opacity" Value="0"/>
            <Setter Property="RenderTransform">
                <TransformGroup>
                    <TranslateTransform X="52.8" Y="488"/>
                </TransformGroup>
            </Setter>
            <Style.Animations>
                <Animation Duration="0:0:1.5"
                           Easing="QuinticEaseOut"
                           FillMode="Forward">
                    <KeyFrame Cue="0%">
                        <Setter Property="Opacity" Value="0" />
                        <Setter Property="(TranslateTransform.X)" Value="52.8" />
                        <Setter Property="(TranslateTransform.Y)" Value="488" />
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="Opacity" Value="1"/>
                        <Setter Property="(TranslateTransform.X)" Value="0" />
                        <Setter Property="(TranslateTransform.Y)" Value="0" />
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>
        
        <Style Selector="TextBlock.Main">
            <Setter Property="Opacity" Value="0"/>
            <Setter Property="RenderTransform">
                <TransformGroup>
                    <TranslateTransform X="-1.6" Y="72"/>
                </TransformGroup>
            </Setter>
            <Style.Animations>
                <Animation Duration="0:0:0.8"
                           Easing="QuinticEaseOut"
                           FillMode="Forward">
                    <KeyFrame Cue="0%">
                        <Setter Property="Opacity" Value="0" />
                        <Setter Property="(TranslateTransform.X)" Value="-1.6" />
                        <Setter Property="(TranslateTransform.Y)" Value="72" />
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="Opacity" Value="1" />
                        <Setter Property="(TranslateTransform.X)" Value="0" />
                        <Setter Property="(TranslateTransform.Y)" Value="0" />
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <Style Selector="Image.Logo">
            <Setter Property="Opacity" Value="0"/>
            <Setter Property="RenderTransform">
                <TransformGroup>
                    <TranslateTransform X="3.2" Y="84.8" />
                    <RotateTransform Angle="0" />
                </TransformGroup>
            </Setter>
            <Style.Animations>
                <Animation Duration="0:0:1.1"
                           Delay="0:0:0.3"
                           Easing="BackEaseOut"
                           FillMode="Forward">
                    <KeyFrame Cue="0%">
                        <Setter Property="Opacity" Value="0" />
                        <Setter Property="(TranslateTransform.X)" Value="3.2" />
                        <Setter Property="(TranslateTransform.Y)" Value="84.8" />
                        <Setter Property="(RotateTransform.Angle)" Value="0" />
                    </KeyFrame>
                    <KeyFrame Cue="30%">
                        <Setter Property="Opacity" Value="1"/>
                        <Setter Property="(TranslateTransform.X)" Value="3.2" />
                        <Setter Property="(TranslateTransform.Y)" Value="84.8" />
                        <Setter Property="(RotateTransform.Angle)" Value="364.504" />
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="(TranslateTransform.X)" Value="0" />
                        <Setter Property="(TranslateTransform.Y)" Value="0" />
                        <Setter Property="(RotateTransform.Angle)" Value="0" />
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <Style Selector="TextBlock.Sub">
            <Setter Property="Opacity" Value="0"/>
            <Setter Property="RenderTransform">
                <TransformGroup>
                    <TranslateTransform Y="20" />
                    <ScaleTransform ScaleY="0.95" ScaleX="0.98" />
                </TransformGroup>
            </Setter>
            <Style.Animations>
                <Animation Duration="0:0:0.7"
                         Delay="0:0:0.2"
                         Easing="CubicEaseOut"
                         FillMode="Forward">
                    <KeyFrame Cue="0%">
                        <Setter Property="Opacity" Value="0" />
                        <Setter Property="(TranslateTransform.Y)" Value="20" />
                        <Setter Property="(ScaleTransform.ScaleY)" Value="0.95" />
                        <Setter Property="(ScaleTransform.ScaleX)" Value="0.98" />
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="Opacity" Value="1" />
                        <Setter Property="(TranslateTransform.Y)" Value="0" />
                        <Setter Property="(ScaleTransform.ScaleY)" Value="1" />
                        <Setter Property="(ScaleTransform.ScaleX)" Value="1" />
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <Style Selector="controls|LargeButton">
            <Setter Property="Opacity" Value="0"/>
            <Setter Property="RenderTransform">
                <TransformGroup>
                    <TranslateTransform Y="15" />
                    <ScaleTransform ScaleX="0.96" ScaleY="0.96" />
                </TransformGroup>
            </Setter>
            <Style.Animations>
                <Animation Duration="0:0:0.7"
                           Delay="0:0:0.9"
                           FillMode="Forward">
                    <KeyFrame Cue="0%">
                        <Setter Property="Opacity" Value="0" />
                        <Setter Property="(TranslateTransform.Y)" Value="15" />
                        <Setter Property="(ScaleTransform.ScaleX)" Value="0.96" />
                        <Setter Property="(ScaleTransform.ScaleY)" Value="0.96" />
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="Opacity" Value="1" />
                        <Setter Property="(TranslateTransform.Y)" Value="0" />
                        <Setter Property="(ScaleTransform.ScaleX)" Value="1" />
                        <Setter Property="(ScaleTransform.ScaleY)" Value="1" />
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>
    </Styles>
</UserControl.Resources>

    <Grid>
        <Image
            x:Name="HeroImage"
            Classes="Hero"
            Width="923"
            Height="839"
            Margin="0,0,-130,-246"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Source="/Assets/home-hero.png">
        </Image>

        <StackPanel
            MaxWidth="1300"
            MaxHeight="700"
            MinWidth="600"
            MinHeight="400"
            Margin="10"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center">

            <TextBlock
                x:Name="MainText"
                Classes="Main"
                Width="632"
                Margin="64,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontSize="48"
                LineHeight="72">
                <Run Text="Welcome to SAST" />
                <LineBreak />
                <Run FontWeight="SemiBold" Text="      Group" />
                <Run Text=" !" />
            </TextBlock>

            <Image
                x:Name="Logo"
                Classes="Logo"
                Width="80"
                Height="80"
                Margin="56,-76,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Source="/Assets/C_Sharp_Logo_2023.svg.png">
            </Image>

            <TextBlock
                x:Name="SubText"
                Classes="Sub"
                Width="470"
                Margin="64,24,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontFamily="Microsoft YaHei UI"
                FontSize="24"
                LineHeight="32"
                TextWrapping="Wrap">
                <Run Text="恭喜你迈出了你的第一步！" />
                <LineBreak />
                <Run Text="如果你成功看到此界面，" />
                <LineBreak />
                <Run Text="你已经" />
                <Run FontWeight="Bold" Text="超越90%的人" />
                <Run Foreground="Gray" Text="*" />
                <Run Text="了！" />
                <LineBreak />
                <Run Text="请继续努力！" />
                <LineBreak />
                <Run FontSize="12" Foreground="Gray" Text="*: 数据来源于22级C#组长" />
            </TextBlock>

            <controls:LargeButton
                x:Name="HelpButton"
                HorizontalAlignment="Left"
                VerticalAlignment="Stretch"
                Margin="64,80,0,0"
                Click="LargeButton_OnClick"
                SubTitle="戳我查看获取帮助的途径"
                MainTitle="需要帮助？">
                <controls:LargeButton.Icon>
                    <TextBlock
                        Text="⇨"
                        FontSize="48"
                        FontWeight="Bold"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"/>
                </controls:LargeButton.Icon>
            </controls:LargeButton>
        </StackPanel>
    </Grid>
</UserControl>
