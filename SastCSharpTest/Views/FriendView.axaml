<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:SastCSharpTest.Controls"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SastCSharpTest.Views.FriendView"
        Loaded="UserControl_Loaded"
        Background="Transparent">
        
    <UserControl.Resources>
        <Styles x:Key="AnimationStyles">
            <Style Selector="Border.MainContent">
                <Setter Property="Opacity" Value="0"/>
                <Setter Property="RenderTransform">
                    <TransformGroup>
                        <TranslateTransform Y="30"/>
                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                    </TransformGroup>
                </Setter>
                <Style.Animations>
                    <Animation Duration="0:0:0.6"
                               Easing="CubicEaseOut"
                               FillMode="Forward">
                        <KeyFrame Cue="0%">
                            <Setter Property="Opacity" Value="0"/>
                            <Setter Property="(TranslateTransform.Y)" Value="30"/>
                            <Setter Property="(ScaleTransform.ScaleX)" Value="0.98"/>
                            <Setter Property="(ScaleTransform.ScaleY)" Value="0.98"/>
                        </KeyFrame>
                        <KeyFrame Cue="100%">
                            <Setter Property="Opacity" Value="1"/>
                            <Setter Property="(TranslateTransform.Y)" Value="0"/>
                            <Setter Property="(ScaleTransform.ScaleX)" Value="1"/>
                            <Setter Property="(ScaleTransform.ScaleY)" Value="1"/>
                        </KeyFrame>
                    </Animation>
                </Style.Animations>
            </Style>
        </Styles>
    </UserControl.Resources>
    
	<Grid>
		<Border 
            Classes="MainContent"
            CornerRadius="8"
            BorderBrush="{DynamicResource SystemControlForegroundBaseHighBrush}"
            BorderThickness="1"
            Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
            Margin="50"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            MaxWidth="1000"
            MaxHeight="800">
			<Grid x:Name="MainGrid">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="*" />
				</Grid.RowDefinitions>

				<Grid
					Grid.Column="0"
					Grid.Row="1"
					VerticalAlignment="Stretch"
					HorizontalAlignment="Stretch">
					<Grid.RowDefinitions>
						<RowDefinition Height="*" />
						<RowDefinition Height="Auto" />
					</Grid.RowDefinitions>
					<Border
                        BorderThickness="0,1,0,0"
                        BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                        VerticalAlignment="Stretch"
                        Padding="24,0,24,52">
                        <StackPanel>
                            <TextBlock
                                Grid.Row="0"
                                Text="My Friends"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                FontSize="20"
                                FontWeight="SemiBold"
                                Margin="12,40,12,36" />
                            <TextBox
                                Watermark="Friend Name"
                                HorizontalAlignment="Stretch"
                                x:Name="NameBox"
                                Grid.Row="1"
                                Margin="12,6,24,6"
                                IsEnabled="False" />
                            <TextBox
                                Watermark="Friend Description"
                                HorizontalAlignment="Stretch"
                                x:Name="DescriptionBox"
                                Grid.Row="2"
                                Margin="12,6,24,6"
                                IsEnabled="False" />
                        </StackPanel>
                    </Border>

					<Border
                        Padding="24"
                        CornerRadius="8"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Bottom"
                        Background="Transparent">
                        <Grid
                            Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Button
                                Classes="accent"
                                x:Name="EditButton"
                                VerticalAlignment="Top"
                                Margin="6,6,6,6"
                                Width="80"
                                Click="EditFriend"
                                HorizontalAlignment="Left"
                                IsVisible="False"
                                Content="    Edit" />
                            <ComboBox
                                x:Name="FriendOption"
                                Grid.Column="1"
                                Margin="6,6,6,6"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Stretch"
                                SelectionChanged="ChooseFriend" />
                        </Grid>
					</Border>
				</Grid>

				<Image
					x:Name="ImageBox"
					Stretch="UniformToFill"
					Grid.Column="1"
					Grid.Row="1"
					HorizontalAlignment="Stretch"
					VerticalAlignment="Stretch" />
			</Grid>
		</Border>
	</Grid>
</UserControl>
